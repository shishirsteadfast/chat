{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "express", "express-session"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
      "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
}
